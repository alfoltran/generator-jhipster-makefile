{
  "name": "generator-jhipster-makefile",
  "version": "0.1.0",
  "description": "Yeoman generator to create a JHipster Makefile and Bash scripts",
  "homepage": "https://github.com/alfoltran/generator-jhipster-makefile",
  "author": {
    "name": "Alfredo Fialho",
    "email": "alfoltran@gmail.com",
    "url": "https://github.com/alfoltran"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "generator",
    "jhipster",
    "makefile",
    "bash",
    "yeoman-generator"
  ],
  "devDependencies": {
    "@types/jest": "24.0.23",
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "eslint": "^6.6.0",
    "prettier": "^1.19.1",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-config-xo": "^0.27.2",
    "jest": "^24.9.0"
  },
  "engines": {
    "npm": ">= 4.0.0"
  },
  "dependencies": {
    "yeoman-generator": "^2.0.1",
    "chalk": "^2.1.0",
    "yosay": "^2.0.1",
    "ejs": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": "error"
    },
    "plugins": [
      "prettier"
    ]
  },
  "scripts": {
    "pretest": "eslint .",
    "test": "jest"
  },
  "repository": "alfoltran/generator-jhipster-makefile",
  "license": "MIT"
}
